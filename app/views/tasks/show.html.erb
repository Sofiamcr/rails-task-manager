
<div class="container mt-5">
  <div class="d-flex justify-content-left align-items-center mb-4">
    <h1><%= @task.title %></h1>
    <%= link_to edit_task_path(@task.id), class: 'btn btn-light btn-sm border' do %>
      <i class="fa fa-pencil"></i> Edit task
    <% end %>
    <%= link_to task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?"} do %>
      <i class="fa-regular fa-trash-can"></i>
    <% end %>
  </div>

  <p class="well well-lg"><%= @task.details %></p>

  <% if @task.completed %>
    <i class="fa-regular fa-square-check"></i> This task is completed
  <% else %>
    <i class="fa-regular fa-square"></i> This task is not completed yet
  <% end %>

  <hr>
  <%= link_to tasks_path do %>
    <i class="fa-solid fa-arrow-rotate-left"></i> Back to list
  <% end %>
</div>
